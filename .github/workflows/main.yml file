name: Terraform CI/CD Pipeline

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:
    inputs:
      PLAN_TERRAFORM:
        description: "Run Terraform Plan"
        required: false
        default: false
        type: boolean
      APPLY_TERRAFORM:
        description: "Run Terraform Apply"
        required: false
        default: false
        type: boolean
      DESTROY_TERRAFORM:
        description: "Run Terraform Destroy"
        required: false
        default: false
        type: boolean

jobs:
  terraform:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set Up Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: 1.5.0

      - name: Configure AWS Credentials
        env:
          AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
          AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}

      - name: Terraform Init
        run: |
          cd infra
          echo "=================Terraform Init=================="
          terraform init

      - name: Terraform Plan
        if: inputs.PLAN_TERRAFORM == 'true'
        run: |
          cd infra
          echo "=================Terraform Plan=================="
          terraform plan

      - name: Terraform Apply
        if: inputs.APPLY_TERRAFORM == 'true' && github.ref == 'refs/heads/main'
        run: |
          cd infra
          echo "=================Terraform Apply=================="
          terraform apply -auto-approve

      - name: Terraform Destroy
        if: inputs.DESTROY_TERRAFORM == 'true'
        run: |
          cd infra
          echo "=================Terraform Destroy=================="
          terraform destroy -auto-approve
